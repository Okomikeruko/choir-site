.row{style: "margin-bottom: 30px;"}
  .col-xs-12
    %span.date.d-none.d-lg-inline=article.created_at.strftime("%m/%d/%Y")
    =link_to news_path(article),
             class: "secondary" do
      %h2=article.title
    .clearfix
      %strong.push-left=article.author_name
      %span.date.float-end.d-md-none=article.created_at.strftime("%m/%d/%Y")
    %p
      =truncate article.content.html_safe,
                length: 120,
                separator: ' ',
                escape: false
      =link_to "Read More", news_path(article), class: "nobreak"