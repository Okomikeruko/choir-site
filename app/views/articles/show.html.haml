-provide :title, @article.title
-provide :bg, "night-vintage-music-bokeh.jpg"

.row
  .d-none.d-sm-block.col-sm-4.col-md-3.col-lg-2
    =render "sorters"
  .col-sm-8.col-md-9.col-lg-10
    %span.date.d-none.d-md-inline=@article.created_at.strftime("%m/%d/%Y")
    %h2=@article.title
    .clearfix
      %strong.push-left=@article.author_name
      %span.date.float-end.d-md-none=@article.created_at.strftime("%m/%d/%Y")
    .article-content
      = sanitize @article.content

.row
  .col-xs-12
    =link_to "< Back to News",
             news_index_path,
             class: "text-center",
             style: 'display: block; margin-top: 40px;'