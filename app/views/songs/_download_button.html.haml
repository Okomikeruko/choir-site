.dropdown.float-end
  %button{ class: "btn btn-secondary dropdown-toggle",
           type: "button",
           id: "downloads#{instrument.id}",
           "data-bs-toggle": "dropdown",
           aria: { expanded: false } } Downloads
  %ul.dropdown-menu{ aria: { labelledby: "downloads#{instrument.id}" } }
    - if instrument.pdf_blob.attached?
      %li= link_to("Sheet Music - PDF", url_for(instrument.pdf_blob), class: 'dropdown-item', target: '_blank')
    - if instrument.pdf_and_audio?
      %li
        %hr.dropdown-divider
    - if instrument.mp3_blob.attached?
      %li= link_to("Audio File - MP3", url_for(instrument.mp3_blob), class: 'dropdown-item', target: '_blank')
    - if instrument.midi_blob.attached?
      %li= link_to("Audio File - MIDI", url_for(instrument.midi_blob), class: 'dropdown-item', target: '_blank')
