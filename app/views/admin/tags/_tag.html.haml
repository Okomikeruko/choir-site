%tr
  %td= tag.name
  %td= tag.slug
  %td= tag.articles.count
  %td.text-end
    %button{ type:"button",
             data: { toggle: "modal",
                     target: "#tag-#{tag.id}" },
             class: "btn btn-outline-secondary btn-xs"}
      %span.bi.bi-pencil
    &nbsp;
    =link_to admin_tag_path(tag),
             method: :delete,
             data: { confirm: "Are you sure?" },
             class: "btn btn-danger btn-xs" do
      %span.bi.bi-x