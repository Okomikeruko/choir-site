-unless flash.empty?
  -flash.each do |message_type, message|
    .alert.alert-dismissible{ class: "alert-#{message_type}",
                              role: "alert" }
      %button.close{type: "button",
                    data: { dismiss: "alert" },
                    aria: { label: "Close" } }
        %span{ aria: { hidden: "true" } }
          &times;
      =message